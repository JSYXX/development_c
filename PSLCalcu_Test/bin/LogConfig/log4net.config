<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net, Version=1.2.11.0, Culture=neutral, PublicKeyToken=1B44E1D426115821" />
  </configSections>
  <log4net>
    <root>
      <!--(高) OFF > FATAL > ERROR > WARN > INFO > DEBUG > ALL (低) -->
      <level value="ALL" />
      <!--根据log级别记录到不同的日志文件-->
      <appender-ref ref="DebugLog"/>
	    <appender-ref ref="InfoLog"/>
      <appender-ref ref="WarnLog"/>
      <appender-ref ref="ErrorLog"/>
      <appender-ref ref="FatalLog"/>
	  <!--appender-ref ref="OPCLog"/-->
    </root>
    
    <appender name="DebugLog" type="log4net.Appender.RollingFileAppender">
      <file value="log\Debug.log" />
      <appendToFile value="true" />
      <!--log保留天数-->
      <MaxSizeRollBackups value="1"/>
      <!--日志文件名是否是固定不变的。如果未true，则文件名只取File参数，固定不变。如果为false，则文件名取File+DatePattern-->
      <StaticLogFileName value ="false"/>
      <rollingStyle value="Date" />
      <datePattern value=".yyyy_MM_dd.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <securityContext type="log4net.Util.WindowsSecurityContext">
        <credentials value="Process" />
      </securityContext>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="DEBUG" />
      </filter>
    </appender>
	
    <appender name="InfoLog" type="log4net.Appender.RollingFileAppender">
      <!--日志路径-->
      <file value="log\Info.log" />
      <!--是否是向文件中追加日志-->
      <appendToFile value="true" />
	  <!--变换的形式为日期，这种情况下每天只有一个日志-->
	  <!--<rollingStyle value="Date"/>-->
      <!--此时MaxSizeRollBackups和maximumFileSize的节点设置没有意义-->      
      <!--变换的形式为日志大小-->
	  <!--<rollingStyle value="Composite"/>-->
      <!--这种情况下MaxSizeRollBackups和maximumFileSize的节点设置才有意义-->
	   <rollingStyle value="Composite" />
      <!--log保留天数-->
      <MaxSizeRollBackups value="2"/>
	  <!--log单文件最大容量-->
	  <MaximumFileSize value="10MB" />
      <!--日志文件名是否是固定不变的-->
      <StaticLogFileName value ="false"/>      
      <!--日志文件名格式为:20080831.log-->
      <datePattern value=".yyyy_MM_dd.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <securityContext type="log4net.Util.WindowsSecurityContext">
        <credentials value="Process" />
      </securityContext>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Info" />
        <levelMax value="Info" />
      </filter>
    </appender>
	
	 <appender name="WarnLog" type="log4net.Appender.RollingFileAppender">
      <!--日志路径-->
      <file value="log\Warn.log" />
      <!--是否是向文件中追加日志-->
      <appendToFile value="true" />
	  <!--变换的形式为日期，这种情况下每天只有一个日志-->
	  <!--<rollingStyle value="Date"/>-->
      <!--此时MaxSizeRollBackups和maximumFileSize的节点设置没有意义-->      
      <!--变换的形式为日志大小-->
	  <!--<rollingStyle value="Composite"/>-->
      <!--这种情况下MaxSizeRollBackups和maximumFileSize的节点设置才有意义-->
	   <rollingStyle value="Composite" />
      <!--log保留天数-->
      <MaxSizeRollBackups value="2"/>
	  <!--log单文件最大容量-->
	  <MaximumFileSize value="10MB" />
      <!--日志文件名是否是固定不变的-->
      <StaticLogFileName value ="false"/>      
      <!--日志文件名格式为:20080831.log-->
      <datePattern value=".yyyy_MM_dd.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <securityContext type="log4net.Util.WindowsSecurityContext">
        <credentials value="Process" />
      </securityContext>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Warn" />
        <levelMax value="Warn" />
      </filter>
    </appender>

    <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
      <file value="log\Error.log" />
      <appendToFile value="true" />
	  <!--变换的形式为日期，这种情况下每天只有一个日志-->
	  <!--<rollingStyle value="Date"/>-->
      <!--此时MaxSizeRollBackups和maximumFileSize的节点设置没有意义-->      
      <!--变换的形式为日志大小-->
	  <!--<rollingStyle value="Composite"/>-->
      <!--这种情况下MaxSizeRollBackups和maximumFileSize的节点设置才有意义-->
      <rollingStyle value="Composite" />
      <!--log保留天数-->
      <maxSizeRollBackups value="100"/>
	  <!--log单文件最大容量-->
	  <maximumFileSize value="10MB" />
      <!--日志文件名是否是固定不变的-->
      <StaticLogFileName value ="false"/>	  
      <datePattern value=".yyyy_MM_dd.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <securityContext type="log4net.Util.WindowsSecurityContext">
        <credentials value="Process" />
      </securityContext>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="ERROR" />
      </filter>
    </appender>
	
	<appender name="FatalLog" type="log4net.Appender.RollingFileAppender">
      <file value="log\Fatal.log" />
      <appendToFile value="true" />
	  <!--变换的形式为日期，这种情况下每天只有一个日志-->
	  <!--<rollingStyle value="Date"/>-->
      <!--此时MaxSizeRollBackups和maximumFileSize的节点设置没有意义-->      
      <!--变换的形式为日志大小-->
	  <!--<rollingStyle value="Composite"/>-->
      <!--这种情况下MaxSizeRollBackups和maximumFileSize的节点设置才有意义-->
      <rollingStyle value="Composite" />
      <!--log保留天数-->
      <maxSizeRollBackups value="100"/>
	  <!--log单文件最大容量-->
	  <maximumFileSize value="10MB" />
      <!--日志文件名是否是固定不变的-->
      <StaticLogFileName value ="false"/>	  
      <datePattern value=".yyyy_MM_dd.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <securityContext type="log4net.Util.WindowsSecurityContext">
        <credentials value="Process" />
      </securityContext>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Fatal" />
        <levelMax value="Fatal" />
      </filter>
    </appender>
	
	<appender name="OPCLog" type="log4net.Appender.RollingFileAppender">
      <file value="log\OPCInfo.log" />
      <appendToFile value="true" />
      <!--log保留天数-->
      <MaxSizeRollBackups value="100"/>
	  <!--log单文件最大容量-->
	  <maximumFileSize value="10MB" />
      <!--日志文件名是否是固定不变的-->
      <StaticLogFileName value ="true"/>
      <rollingStyle value="Date" />
      <datePattern value=".yyyyMMdd.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <securityContext type="log4net.Util.WindowsSecurityContext">
        <credentials value="Process" />
      </securityContext>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Info" />
        <levelMax value="Info" />
      </filter>
    </appender>	
  </log4net>
</configuration>